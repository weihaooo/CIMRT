<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <id>theme</id>
    <formats>
        <format>jar</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-blue</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-blue</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-blue-grey</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-blue-grey</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-brown</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-brown</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-cyan</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-cyan</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-green</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-green</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-grey</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-grey</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-indigo</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-indigo</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-purple-amber</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-purple-amber</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-purple-cyan</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-purple-cyan</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-teal</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-teal</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-dark-blue</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-dark-blue</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-ultima-dark-green</directory>
            <outputDirectory>/META-INF/resources/primefaces-ultima-dark-green</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/WEB-INF</directory>
            <outputDirectory>/META-INF/</outputDirectory>
            <includes>
                <include>faces-config.xml</include>
                <include>primefaces-ultima.taglib.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org/primefaces/ultima/component/menu/*</include>
            </includes>
        </fileSet>
    </fileSets>
    
</assembly>